{
  "name": "spy-game-tests",
  "version": "1.0.0",
  "description": "Monorepo for Spy Game Testing Suite",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "python -m pytest packages/*/tests/ -v",
    "test:fairness": "python packages/fairness-tests/src/main.py",
    "test:visualization": "python packages/visualization/src/plot_generator.py",
    "test:benchmark": "python packages/benchmark/src/benchmark.py",
    "test:all": "npm run test:fairness && npm run test:visualization && npm run test:benchmark",
    "install:all": "npm install && pip install -r requirements.txt",
    "clean": "rm -rf packages/*/dist packages/*/build packages/*/__pycache__",
    "lint": "python -m flake8 packages/ --max-line-length=100",
    "format": "python -m black packages/ --line-length=100"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "tsx": "^4.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.9.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/advayc/spy-test.git"
  },
  "keywords": ["testing", "spy-game", "fairness", "statistics"],
  "author": "Advay Chandorkar",
  "license": "MIT"
}